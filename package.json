{
	"name": "wallet-api",
	"packageManager": "yarn@4.5.2",
	"type": "module",
	"scripts": {
		"build": "rm -rf ./dist && tsc",
		"dev": "tsx watch src/main.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"db:migrate": "drizzle-kit migrate",
		"db:generate": "drizzle-kit generate",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"coverage:ui": "vitest run --coverage --reporter=html"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/express": "^5",
		"@types/node": "^24.3.0",
		"@types/pg": "^8.15.5",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.4",
		"@vitest/ui": "4.0.4",
		"dotenv": "^17.2.2",
		"drizzle-kit": "^0.31.4",
		"supertest": "^7.1.4",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^4.0.4"
	},
	"dependencies": {
		"decimal.js": "^10.6.0",
		"drizzle-orm": "^0.44.5",
		"express": "^5.1.0",
		"express-winston": "^4.2.0",
		"pg": "^8.16.3",
		"winston": "^3.17.0",
		"zod": "^4.1.5"
	}
}
