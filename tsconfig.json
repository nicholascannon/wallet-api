{
	"include": ["src"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["node"],

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	}
}
